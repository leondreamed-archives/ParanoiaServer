<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Paranoia</title>
  <link href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@400;700&display=swap" rel="stylesheet">
  <script src="https://uicdn.toast.com/tui.code-snippet/latest/tui-code-snippet.js"></script>
  <script src="https://uicdn.toast.com/tui.dom/v3.0.0/tui-dom.js"></script>
  <script src="https://uicdn.toast.com/tui.time-picker/latest/tui-time-picker.min.js"></script>
  <script src="https://uicdn.toast.com/tui.date-picker/latest/tui-date-picker.min.js"></script>
  <script src="https://uicdn.toast.com/tui-calendar/latest/tui-calendar.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/socket.io-client@2/dist/socket.io.js"></script>
  <script
    src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
    crossorigin="anonymous"></script>
  <link rel="stylesheet" type="text/css" href="https://uicdn.toast.com/tui-calendar/latest/tui-calendar.css" />
  <link rel="stylesheet" type="text/css" href="https://uicdn.toast.com/tui.date-picker/latest/tui-date-picker.css" />
  <link rel="stylesheet" type="text/css" href="https://uicdn.toast.com/tui.time-picker/latest/tui-time-picker.css" />
  <style>
    * {
      font-family: 'Fira Sans', sans-serif;
    }

    #screenshots {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .title {
      font-size: 40px;
      text-align: center;
    }

    .description {
      text-align: center;
    }
  </style>
</head>
<body>
  <h1 class="title">Paranoia</h1>
  <p class="description">You are currently in <strong>leonzalion</strong>'s room.</p>
  <div id="calendar" style="height: 800px"></div>
  <button onclick="takeScreenshot()">Take Screenshot(s)</button>
  <div id="screenshots"></div>

  <script>
    const socket = io.connect('https://paranoia-app.herokuapp.com');

    socket.on('tookScreenshot', (base64Screenshots) => {
      console.log('screenshot');
      for (const base64Screenshot of base64Screenshots) {
        const image = $('<img />');
        image.attr('src', base64Screenshot);
        image.css('width', '800px');
        $('#screenshots').append(image);
      }
    });

    function takeScreenshot() {
      socket.emit('takeScreenshot');
    }

    const Calendar = tui.Calendar;
    let calendar = new Calendar('#calendar', {
      defaultView: 'week',
      taskView: false,
      isReadOnly: true,
    });

    socket.emit('getSchedules', function(schedules) {
      calendar.createSchedules(schedules);
    });

    socket.on('setSchedules', function(schedules) {
      calendar.createSchedules(schedules);
    });

  </script>
</body>
</html>
